#include<iostream>
#include<stdlib.h>
#include<math.h>
using namespace std;
int main()
{
    int t;
    scanf("%d",&t);
    while(t--)
    {
        long long int a,b,c;
        scanf("%lld %lld %lld",&a,&b,&c);
        long long int s=a*a;
        long long int z=2*b;
        printf("%lld\n",s-z);

    }
    return 0;
}
